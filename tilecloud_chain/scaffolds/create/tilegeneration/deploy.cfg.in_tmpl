[DEFAULT]
project = {{project}}

[main]
hookdir = %(here)s/hooks/

[files]
active = false

[databases]
names = $${vars:db}

[code]
dir = /var/www/vhosts/<vhost>/private/{{project}}
dest = /var/www/vhosts/???/private/{{project}}

[apache]
dest = /var/www/vhosts/conf/{{project}}.conf
content = Include /var/www/vhosts/???/private/{{project}}/apache/*.conf
